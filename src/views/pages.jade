-
  classes   = {show: page.max > 1}
  firstpage = page.current === 1
  lastpage  = page.current === page.max

nav.pages(classes=classes)
  if firstpage
    button.icon.previous(title="previous page" disabled="disabled") =
  else
    button.icon.previous(title="previous page" disabled=null) =

  - i = 1
  nav.numbers
    while i < page.max + 1
      - isCurrent = i === page.current
      if isCurrent
        strong(key=i) #{i}
      else
        a(key=i) #{i}
      - i++

  if lastpage
    button.icon.next(title="next page" disabled="disabled") =
  else
    button.icon.next(title="next page" disabled=null) =
